<!-- updateAdd -->
<div class='w-50 container mt-5'>
    <form id='frm' action='/mypage/updateAdd/<%= add_info[0].address_number %>?_method=PATCH' method='post'>
      <div class="col-auto mb-3">
        <label class="col-form-label">우편번호</label>
        <input name='postal_code' data-name='우편번호' type="text" class="form-control" value='<%= add_info[0].postal_code %>' required>
      </div>
      <div class="col-auto mb-3">
        <label class="col-form-label">기본 주소</label>
        <input name='default_address' data-name='기본주소' type="text" class="form-control" value='<%= add_info[0].default_address %>' required>
      </div>
      <div class="col-auto mb-5">
        <label class="col-form-label">상세 주소</label>
        <input name='optional_address' data-name='상세주소' type="text" class="form-control" value='<%= add_info[0].optional_address %>' required>
      </div>
      <div class="col-auto">
        <button type="submit" class="w-100 btn btn-info btn-lg" style='height: 65px';>Update</button>
      </div>
    </form>
</div>